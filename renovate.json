{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "argocd": {
    "fileMatch": ["cluster/bootstrap/.+\\.yaml$","cluster/argocd/.+\\.yaml$","cluster/cluster\\.yaml$"]
  },
  "helm-values": {
    "commitMessageTopic": "helm values {{depName}}",
    "fileMatch": [
      "cluster/values/.*\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "description": "Auto merge container digests",
      "matchDatasources": ["docker"],
      "automerge": true,
      "ignoreTests": true,
      "automergeType": "pr",
      "matchUpdateTypes": ["patch", "minor", "digest"],
      "matchPackagePatterns": ["ghcr.io/bjw-s", "ghcr.io/onedr0p", "linuxserver"]
    },
    {
      "description": "Auto merge container digests",
      "matchDatasources": ["docker"],
      "automerge": false,
      "ignoreTests": true,
      "automergeType": "pr",
      "matchUpdateTypes": ["patch"]
    },
    {
      "description": "Auto merge helm deps",
      "matchDatasources": ["helm","git-tags"],
      "automerge": true,
      "ignoreTests": true,
      "automergeType": "pr",
      "matchUpdateTypes": ["patch"]
    }
  ]
}
