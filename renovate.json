{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "argocd": {
    "fileMatch": [
      "cluster/bootstrap/.+\\.yaml$",
      "cluster/argocd/.+\\.yaml$",
      "cluster/cluster\\.yaml$"
    ]
  },
  "helm-values": {
    "commitMessageTopic": "helm values {{depName}}",
    "fileMatch": [
      "cluster/values/.*\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "description": "Auto merge container digests",
      "matchDatasources": [
        "docker"
      ],
      "automerge": true,
      "ignoreTests": true,
      "automergeType": "pr",
      "matchUpdateTypes": [
        "patch",
        "minor",
        "digest"
      ]
    },
    {
      "description": "Auto merge helm deps",
      "matchDatasources": [
        "helm",
        "git-tags"
      ],
      "automerge": true,
      "ignoreTests": true,
      "automergeType": "pr",
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    },
    {
      "description": "Do Not automerge these",
      "matchSourceUrls": ["https://bjw-s.github.io/helm-charts/"],
      "matchNames": ["app-template", "factorio"],
      "automerge": false
    }
  ]
}
